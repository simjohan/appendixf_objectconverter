<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" fx:controller="objectconverter.FXMLObjectConverterController" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Object:" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"  />
    <TextField fx:id="objectText" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="20.0" />   
    <Label text="Values:" AnchorPane.topAnchor="0.0" />
    <TextField fx:id="valuesText" AnchorPane.topAnchor="0.0" />
    
    <TextArea fx:id="textArea" editable="false" AnchorPane.topAnchor="30.0" />
    
    <Button fx:id="convertButton" text="Convert" onAction="#handleConvertButtonAction"  />
    <Button fx:id="clearButton"  text="Clear" onAction="#handleClearButtonAction"  />
</AnchorPane>
